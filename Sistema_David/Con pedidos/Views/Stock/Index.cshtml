            <div class="non-active arrival params not-readonly">
                <label class="lblNombreInput">Producto</label>
            </div>
            <div class="minicontrol">
                <input autocomplete="off" id="Productos" class="input-params input-params-not-readonly text-black input-nuevomodif" list="lstProducto" data-error="errTxtProducto" required placeholder="Seleccione un producto" />
                <datalist id="lstProducto"></datalist>
                <div id="errTxtProducto"></div>
