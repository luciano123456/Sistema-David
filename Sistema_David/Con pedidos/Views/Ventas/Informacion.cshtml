
@{
    ViewBag.Title = "Index";
}


<link href="~/Content/Datatable/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Estilos/Productos.css" rel="stylesheet" />
<link href="~/Estilos/Ventas.css" rel="stylesheet" />

<link href="~/Content/Datatable/css/responsive.dataTables.min.css" rel="stylesheet" />


<body>

    <div class="row mt-4 table-bordered table-borderless datatablepersonalizado">
        <div class="col-sm-12">
            <div class="card-body">
                <table id="grdInformacionVenta" class="table table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">Fecha</th>
                            <th class="text-center">Descripcion</th>
                            <th class="text-center">Cobrador</th>
                            <th class="text-center">Entrega</th>
                            <th class="text-center">Valor Cuota</th>
                            <th class="text-center">Restante</th>
                            <th class="text-center">Observacion</th>
                            <th class="text-center">Acciones</th>
                    </thead>
                </table>
            </div>
        </div>
    </div>

    <div class="modal fade" id="informacionModal" tabindex="-1" aria-labelledby="informacionModallLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="informacionModalLabel">Informacion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">

                    <input type="Text" id="IdInformacionVenta" class="input-nuevomodif" hidden />


                    <label id="lblNombreInput" class="lblNombreInput">Descripcion</label>
                    <textarea id="Descripcion" class="input-text-area" name="textarea" rows="3" cols="30"></textarea>
                </div>
                <p id="datos" class="mb-3 text-center text-danger datos-error d-none"></p>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button id="btnRegistrarModificar" type="button" class="btn btn-primary" onclick="agregarInformacion()">Agregar</button>
                </div>
            </div>
        </div>
    </div>


</body>

<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>
<script src="~/Scripts/xlsx.full.min.js.js"></script>

<link href="~/Content/font-awesome.css" rel="stylesheet" />
@section scripts{
    <script src="~/JavaScript/InformacionVenta.js"></script>
}
