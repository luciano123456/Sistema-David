@{
    ViewBag.Title = "Historial de Ventas";
}

<link href="~/Content/Datatable/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/Datatable/css/responsive.dataTables.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="~/Estilos/Ventas_Electrodomesticos.css?v=1.0" rel="stylesheet" />

<style>
    /* ====== Venta seleccionada ====== */
    tr.venta-seleccionada,
    tr.shown {
        background: rgba(88,166,255,0.08) !important;
        border-left: 3px solid var(--accent) !important;
    }

        tr.venta-seleccionada > td,
        tr.shown > td {
            background: transparent !important;
        }

    .venta-detalle-box,
    .accordion-sub {
        background: rgba(255,255,255,0.03);
        border: 1px solid rgba(88,166,255,0.25);
        border-radius: 14px;
        padding: 20px;
        margin: 4px 0 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.35);
    }

    .btn-cobrar {
        background: #f0ad4e;
        border-color: #f0ad4e;
        color: #000;
    }

    .btn-ajuste {
        background: #5bc0de;
        border-color: #5bc0de;
        color: #fff;
    }

    .btn-historial {
        background: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

    .ve-accordion-item .accordion-button i {
        margin-right: .5rem;
    }

    .btn-accion {
        width: 36px;
        height: 36px;
        border-radius: 10px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        padding: 0;
        border: none;
    }

        .btn-accion i {
            font-size: 14px;
        }

    .btn-editar {
        background: rgba(88,166,255,0.15);
        color: #58a6ff;
    }

    .btn-eliminar {
        background: rgba(255,107,107,0.18);
        color: #ff6b6b;
    }

    .btn-pdf {
        background: rgba(255,82,82,0.2);
        color: #ff5252;
    }

    .btn-historial {
        background: rgba(180,180,180,0.15);
        color: #cfcfcf;
    }

    .btn-accion:hover {
        filter: brightness(1.2);
    }

</style>

<body class="ve-dark">

    <div class="container-xxl py-4">

        <!-- ===== HEADER ===== -->
        <header class="d-flex flex-wrap align-items-start gap-3 mb-4">
            <i class="fa fa-bolt text-info fs-2"></i>
            <div>
                <h1 class="m-0 fw-bold text-white">Historial de Ventas</h1>
                <small class="text-muted">Gestión completa de cuotas, cobros y ajustes.</small>
            </div>
        </header>

        <!-- ===== KPIs ===== -->
        <section class="mb-3">
            <div class="row g-3">
                <div class="col-md-4">
                    <div class="kpi kpi-total">
                        <span>Total Vendido</span>
                        <h3 id="kpiTotalVendido">$ 0,00</h3>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="kpi kpi-entrega">
                        <span>Total Cobrado</span>
                        <h3 id="kpiTotalCobrado">$ 0,00</h3>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="kpi kpi-restante">
                        <span>Pendiente</span>
                        <h3 id="kpiTotalPendiente">$ 0,00</h3>
                    </div>
                </div>
            </div>
        </section>

        <!-- ===== CARD PRINCIPAL ===== -->

        <section id="cardVentasPendientes" class="ve-card mb-3" hidden>

            <div class="ve-card-header">
                <div class="d-flex align-items-center gap-2">
                    <i class="fa fa-clock-o text-warning"></i>
                    <span class="ve-card-title">
                        Ventas pendientes de confirmación
                    </span>
                </div>
            </div>

            <div class="ve-card-body">
                <div class="table-responsive">
                    <table id="grdVentasPendientes"
                           class="table ve-table align-middle nowrap w-100">
                        <thead>
                            <tr>
                                <th style="width:40px"></th>
                                <th>Nro</th>
                                <th>Fecha</th>
                                <th>Cliente</th>
                                <th>DNI</th>
                                <th>Direccion</th>
                                <th>Total</th>
                                <th>Pagado</th>
                                <th>Restante</th>
                                <th>Vencidas</th>
                                <th>Estado</th>
                                <th style="width:140px" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

        </section>
        <section class="ve-card">

            <div class="ve-card-header justify-content-between">
                <div class="d-flex align-items-center gap-2">
                    <i class="fa fa-history text-info"></i>
                    <span class="ve-card-title">Listado de ventas</span>
                </div>

                <div class="d-flex flex-wrap gap-2">
                    <a class="btn btn-success btn-sm" href="/Ventas_Electrodomesticos/NuevoModif">
                        <i class="fa fa-plus-square"></i> Nueva Venta
                    </a>

                    <button id="btnToggleFiltros" hidden class="btn btn-outline-light btn-sm">
                        <i id="iconFiltros" class="fa fa-chevron-down"></i> Filtros
                    </button>

                </div>
            </div>

            <div class="ve-card-body">

                <!-- ===== FILTROS ===== -->
                <form id="formFiltros" class="d-none mb-4" hidden>
                    <div class="row g-4">

                        <div class="col-md-2">
                            <label class="form-label">Desde</label>
                            <input id="txtFechaDesde" type="date" class="form-control ve-input">
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Hasta</label>
                            <input id="txtFechaHasta" type="date" class="form-control ve-input">
                        </div>


                        <div class="col-md-3">
                            <label class="form-label">Vendedor</label>
                            <select id="filtroVendedor" class="form-select ve-input">
                            </select>
                        </div>

                        <div class="col-md-2">
                            <label class="form-label">Estado</label>
                            <select id="filtroEstado" class="form-select ve-input">
                                <option value="">Todos</option>
                                <option value="Activa">Activa</option>
                                <option value="Pendiente">Pendiente</option>
                                <option value="Cancelada">Cancelada</option>
                            </select>
                        </div>


                        <div class="col-md-3 d-flex gap-2 align-items-end">
                            <button type="button" class="btn btn-primary flex-fill" onclick="aplicarFiltros()">
                                <i class="fa fa-search"></i> Aplicar
                            </button>

                            <button type="button" class="btn btn-outline-light flex-fill" onclick="limpiarFiltros()">
                                <i class="fa fa-eraser"></i> Limpiar
                            </button>
                        </div>
                    </div>
                </form>



                <!-- ===== TABLA PRINCIPAL ===== -->
                <div class="table-responsive">



                    <table id="grdVentas" class="table ve-table align-middle nowrap w-100">
                        <thead>
                            <tr>
                                <th style="width:40px"></th>
                                <th>Nro</th>
                                <th>Fecha</th>
                                <th>Cliente</th>
                                <th>DNI</th>
                                <th>Direccion</th>
                                <th>Total</th>
                                <th>Pagado</th>
                                <th>Restante</th>
                                <th>Vencidas</th>
                                <th>Estado</th>
                                <th style="width:120px" class="text-center">Acciones</th>
                            </tr>
                        </thead>
                    </table>
                </div>

            </div>
        </section>

        <div class="d-flexv flex-wrap justify-content-end mt-2 mb-4">
            <div id="btnLimite" class="me-2 mb-2" style="display: none">
                <a class="btn btn-success btnnuevo btn-uniform" onclick="modalLimite()" style="background-color: #f0ad4e; border-color: #4285F4; color: white;">
                    <i class="fa fa-info"></i> Limites
                </a>

            </div>

        </div>


    </div>

    <div class="modal fade" id="modalLimite" tabindex="-1" aria-labelledby="modalLimitesLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-md">
            <div class="modal-content modal-limite-pro2">

                <!-- HEADER -->
                <div class="modal-header border-0 pb-0">
                    <div class="d-flex align-items-center gap-3">
                        <div class="limite-icon">
                            <i class="fa fa-calendar"></i>
                        </div>
                        <div class="lh-sm">
                            <h5 class="modal-title fw-bold mb-1" id="modalLimitesLabel">
                                Límite de días — primera cuota
                            </h5>
                            <div class="text-muted small">
                                Configurá el plazo máximo permitido
                            </div>
                        </div>
                    </div>

                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <!-- BODY -->
                <div class="modal-body pt-4">
                    <div class="mb-3">
                        <label class="form-label text-uppercase limite-label">
                            Cantidad de días
                        </label>

                        <div class="input-group limite-inputgroup">
                            <span class="input-group-text limite-addon">
                                <i class="fa fa-clock-o"></i>
                            </span>

                            <input type="number"
                                   id="DiasLimite"
                                   class="form-control limite-input text-black"
                                   placeholder="Ej: 10"
                                   min="0"
                                   inputmode="numeric">

                            <span class="input-group-text limite-addon-end">días</span>
                        </div>

                        <div class="limite-help mt-2">
                            <i class="fa fa-info-circle me-1"></i>
                            Plazo máximo para la primera cuota desde la fecha de venta.
                        </div>
                    </div>

                    <!-- ERROR -->
                    <p id="datos" class="alert alert-danger py-2 px-3 text-center fw-semibold d-none mb-0"></p>
                </div>

                <!-- FOOTER -->
                <div class="modal-footer border-0 pt-0 pb-4">
                    <div class="d-flex gap-2 w-100">
                        <button type="button" class="btn btn-outline-secondary btn-lg w-50" data-bs-dismiss="modal">
                            Cancelar
                        </button>

                        <button id="btnRegistrarModificarwsp"
                                type="button"
                                class="btn btn-primary btn-lg w-50"
                                onclick="modificarLimitePrimerCuota()">
                            <i class="fa fa-save me-2"></i>Guardar
                        </button>
                    </div>
                </div>

            </div>
        </div>
    </div>





    @Html.Partial("_CobroModal_Partial")

</body>

@section scripts {
    <script src="~/Content/Datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/Datatable/js/dataTables.responsive.min.js"></script>

    <!-- Bootstrap 5 JS (para que bootstrap NUNCA sea undefined) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/locale/es.min.js"></script>

    <script src="~/JavaScript/Ventas_Electrodomesticos_Historial.js?v=2.1"></script>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            // Protegido por si bootstrap no existiera por alguna razón
            document.querySelectorAll("[data-bs-toggle='tooltip']").forEach(el => {
                if (window.bootstrap && bootstrap.Tooltip) {
                    new bootstrap.Tooltip(el);
                } else if (window.$ && $(el).tooltip) {
                    $(el).tooltip();
                }
            });
        });
    </script>
}
