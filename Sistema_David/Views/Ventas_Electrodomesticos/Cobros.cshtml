    .btn-cobrar {
        background: #f0ad4e;
        border-color: #f0ad4e;
        color: #000;
    }

    .btn-ajuste {
        background: #5bc0de;
        border-color: #5bc0de;
        color: #fff;
    }

    .btn-historial {
        background: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

    .ve-accordion-item .accordion-button i {
        margin-right: .5rem;
    }


        .select2-container--default .select2-selection--single .select2-selection__rendered {
            color: #fff;
            line-height: 38px;
            padding-left: .75rem;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
