@{
    ViewBag.Title = "Cobros de Cuotas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/Datatable/css/jquery.dataTables.min.css" rel="stylesheet" />
<link href="~/Content/Datatable/css/responsive.dataTables.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />
<link href="~/Estilos/Ventas_Electrodomesticos.css" rel="stylesheet" />

<style>
    /* ====== Venta seleccionada / acordeón ====== */
    tr.venta-seleccionada,
    tr.shown {
        background: rgba(88,166,255,0.08) !important;
        border-left: 3px solid var(--accent) !important;
    }

        tr.venta-seleccionada > td,
        tr.shown > td {
            background: transparent !important;
        }

    .venta-detalle-box,
    .accordion-sub {
        background: rgba(255,255,255,0.03);
        border: 1px solid rgba(88,166,255,0.25);
        border-radius: 14px;
        padding: 20px;
        margin: 4px 0 12px;
        box-shadow: 0 6px 20px rgba(0,0,0,0.35);
    }

    .btn-cobrar {
        background: #f0ad4e;
        border-color: #f0ad4e;
        color: #000;
    }

    .btn-ajuste {
        background: #5bc0de;
        border-color: #5bc0de;
        color: #fff;
    }

    .btn-historial {
        background: #6c757d;
        border-color: #6c757d;
        color: #fff;
    }

    .ve-accordion-item .accordion-button i {
        margin-right: .5rem;
    }

    /* Select2 dark-ish */
    .select2-container--default .select2-selection--single {
        background-color: #121826;
        border: 1px solid rgba(255,255,255,0.15);
        border-radius: .4rem;
        height: 38px;
    }

        .select2-container--default .select2-selection--single .select2-selection__rendered {
            color: #fff;
            line-height: 38px;
            padding-left: .75rem;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            height: 36px;
        }

    .select2-dropdown {
        background-color: #121826;
        border-color: rgba(255,255,255,0.15);
        color: #fff;
    }
</style>

<body class="ve-dark">

    <div class="container-xxl py-4">

        <!-- ===== HEADER ===== -->
        <header class="d-flex flex-wrap align-items-start gap-3 mb-4">
            <i class="fa fa-money text-warning fs-2"></i>
            <div>
                <h1 class="m-0 fw-bold text-white">Cobros de cuotas</h1>
                <small class="text-muted">
                    Listado de cuotas ordenadas por vencimiento. Cobrá y ajustá desde la misma pantalla.
                </small>
            </div>
        </header>

        <!-- ===== CARD PRINCIPAL ===== -->
        <section class="ve-card">

            <div class="ve-card-header justify-content-between">
                <div class="d-flex align-items-center gap-2">
                    <i class="fa fa-list-alt text-info"></i>
                    <span class="ve-card-title">Cuotas a cobrar</span>
                </div>

                <div class="d-flex flex-wrap gap-2">
                    <button id="btnToggleFiltros" class="btn btn-outline-light btn-sm">
                        <i id="iconFiltros" class="fa fa-chevron-down"></i> Filtros
                    </button>
                </div>
            </div>

            <div class="ve-card-body">

                <!-- ===== FILTROS ===== -->
                <form id="formFiltros" class="d-none mb-3">
                    <div class="row g-3">

                        <div class="col-md-3">
                            <label class="form-label">Desde</label>
                            <input id="f_desde" type="date" class="form-control ve-input" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Hasta</label>
                            <input id="f_hasta" type="date" class="form-control ve-input" />
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Cliente</label>
                            <select id="f_cliente" class="form-select ve-input">
                                <option value="">Todos</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Vendedor / Cobrador</label>
                            <select id="f_vendedor" class="form-select ve-input">
                                <option value="">Todos</option>
                            </select>
                        </div>

                        <div class="col-md-3">
                            <label class="form-label">Estado cuota</label>
                            <select id="f_estado" class="form-select ve-input">
                                <option value="">Todas</option>
                                <option value="Pendiente">Pendiente</option>
                                <option value="Vencida">Vencida</option>
                            </select>
                        </div>

                        <div class="col-md-3 d-flex gap-2 align-items-end">
                            <button type="button" class="btn btn-primary flex-fill" onclick="VC.aplicarFiltros()">
                                <i class="fa fa-search"></i> Aplicar
                            </button>
                            <button type="button" class="btn btn-outline-light flex-fill" onclick="VC.limpiarFiltros()">
                                <i class="fa fa-eraser"></i> Limpiar
                            </button>
                        </div>

                    </div>
                </form>

                <!-- ===== TABLA PRINCIPAL ===== -->
                <div class="table-responsive">
                    <table id="vc_tabla" class="table ve-table align-middle nowrap w-100">
                        <thead>
                            <tr>
                                <th style="width:40px;"></th> @* Columna 0: flecha acordeón *@
                                <th>N° Cuota</th>
                                <th>Cliente</th>
                                <th>Vendedor</th>
                                <th>Vencimiento</th>
                                <th>Total cuota</th>
                                <th>Pagado</th>
                                <th>Restante</th>
                                <th>Estado</th>
                                <th class="text-center" style="width:160px;">Acciones</th>
                            </tr>
                        </thead>
                    </table>
                </div>

            </div>
        </section>

    </div>

    <!-- ============================= MODALES ============================= -->
    <!-- COBRO -->
    <div class="modal fade" id="mdCobro" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content ve-modal">
                <div class="modal-header">
                    <h5 class="modal-title text-white">
                        <i class="fa fa-money text-accent me-2"></i> Cobrar cuota
                    </h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input id="md_cuotaId" type="hidden" />

                    <div class="row g-3">
                        <div class="col-md-4">
                            <label class="form-label">Restante</label>
                            <input id="md_restante" class="form-control ve-input" readonly />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Importe a cobrar</label>
                            <input id="md_importe" class="form-control ve-input text-end" />
                        </div>

                        <div class="col-md-4">
                            <label class="form-label">Observación</label>
                            <input id="md_obs" class="form-control ve-input" />
                        </div>
                    </div>
                </div>

                <div class="modal-footer justify-content-between">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button id="md_confirmarCobro" class="btn btn-success">
                        Confirmar cobro
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- AJUSTE -->
    <div class="modal fade" id="mdAjuste" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content ve-modal">

                <div class="modal-header">
                    <h5 class="modal-title text-white">
                        <i class="fa fa-sliders text-accent me-2"></i> Ajustar cuota
                    </h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input id="aj_cuotaId" type="hidden" />

                    <div class="row g-3">

                        <!-- RECARGO -->
                        <div class="col-md-6">
                            <label class="form-label">Recargo</label>

                            <div class="input-group">
                                <input id="aj_recargo"
                                       class="form-control ve-input text-end"
                                       placeholder="Ej: 10" />

                                <div id="ajRecargoTipoWrap" class="btn-group ms-2">
                                    <button type="button"
                                            class="btn btn-outline-light ajTipo active"
                                            data-target="aj_recargoTipo"
                                            data-value="%">
                                        %
                                    </button>

                                    <button type="button"
                                            class="btn btn-outline-light ajTipo"
                                            data-target="aj_recargoTipo"
                                            data-value="$">
                                        $
                                    </button>
                                </div>

                                <input id="aj_recargoTipo" type="hidden" value="%" />
                            </div>
                        </div>

                        <!-- DESCUENTO -->
                        <div class="col-md-6">
                            <label class="form-label">Descuento</label>

                            <div class="input-group">
                                <input id="aj_descuento"
                                       class="form-control ve-input text-end"
                                       placeholder="Ej: 5" />

                                <div id="ajDescuentoTipoWrap" class="btn-group ms-2">
                                    <button type="button"
                                            class="btn btn-outline-light ajTipo active"
                                            data-target="aj_descuentoTipo"
                                            data-value="%">
                                        %
                                    </button>

                                    <button type="button"
                                            class="btn btn-outline-light ajTipo"
                                            data-target="aj_descuentoTipo"
                                            data-value="$">
                                        $
                                    </button>
                                </div>

                                <input id="aj_descuentoTipo" type="hidden" value="%" />
                            </div>
                        </div>

                    </div>
                </div>

                <div class="modal-footer justify-content-between">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>

                    <button id="aj_confirmar" class="btn btn-primary">
                        Aplicar ajuste
                    </button>
                </div>

            </div>
        </div>
    </div>


    <!-- HISTORIAL -->
    <div class="modal fade" id="mdHistorial" tabindex="-1">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content ve-modal">
                <div class="modal-header">
                    <h5 class="modal-title text-white">
                        <i class="fa fa-list text-accent me-2"></i> Historial de movimientos
                    </h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <table class="table ve-table align-middle">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Fecha</th>
                                <th class="text-end">Importe / Valor</th>
                                <th>Obs</th>
                            </tr>
                        </thead>
                        <tbody id="histBody"></tbody>
                    </table>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>

</body>

@section scripts {

    <!-- DataTables -->
    <script src="~/Content/Datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/Content/Datatable/js/dataTables.responsive.min.js"></script>

    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Moment -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/moment.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.4/locale/es.min.js"></script>

    <!-- JS de Select2 -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>

    <!-- TU JS -->
    <script src="~/JavaScript/Ventas_Electrodomesticos_Cobros.js"></script>
}
